<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_button"
            android:src="@drawable/ic_menu_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="100dp"
            android:text="FIFA World Cup Kits"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="60dp"
            android:background="@drawable/bg_button"
            android:src="@drawable/ic_shopping_cart_black_24dp" />

    </LinearLayout>


    <ImageView
        android:id="@+id/showhinh"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#fff"
        android:src="@drawable/vietnam" />

    <TextView
        android:id="@+id/showtenhinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="VIET NAM CLUB SOCCER"
        android:textColor="#111A5F"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView

        android:id="@+id/shownhanhieu"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Adidas"
        android:textColor="#CECDCD"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/showgia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="$130"
        android:textColor="#111A5F"
        android:textSize="30sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/size"
            android:fontFamily="sans-serif-light"
            android:textColor="#111A5F"
            android:layout_marginLeft="10dp"
            android:textSize="30sp"
            android:text="Size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnS"
            android:textSize="30sp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bg_size"
            android:layout_toRightOf="@id/size"
            android:text="S"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/btnM"
            android:textSize="30sp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bg_size"
            android:layout_toRightOf="@id/btnS"
            android:text="M"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <Button
            android:id="@+id/btnL"
            android:textSize="30sp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bg_size"
            android:layout_toRightOf="@id/btnM"
            android:text="L"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <Button
            android:id="@+id/btnXL"
            android:textSize="30sp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bg_size"
            android:layout_toRightOf="@id/btnL"
            android:text="XL"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/kit"
            android:fontFamily="sans-serif-light"
            android:textColor="#111A5F"
            android:layout_marginLeft="10dp"
            android:textSize="30sp"
            android:text="Kit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnHome"
            android:textSize="30sp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bg_size"
            android:layout_toRightOf="@id/kit"
            android:text="HOME"
            android:layout_width="100dp"
            android:layout_height="50dp" />
        <Button
            android:id="@+id/btnAway"
            android:textSize="30sp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bg_size"
            android:layout_toRightOf="@id/btnHome"
            android:text="AWAY"
            android:layout_width="100dp"
            android:layout_height="50dp" />
        <Button
            android:id="@+id/btnThird"
            android:textSize="30sp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bg_size"
            android:layout_toRightOf="@id/btnAway"
            android:text="THIRD"
            android:layout_width="100dp"
            android:layout_height="50dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView

            android:layout_gravity="center_vertical"
            android:id="@+id/qty"
            android:fontFamily="sans-serif-light"
            android:textColor="#111A5F"
            android:layout_marginLeft="10dp"
            android:textSize="30sp"
            android:text="Qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/btndown"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_button"
            android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvQty"
            android:gravity="center"
            android:text="1"
            android:layout_gravity="center_vertical"
            android:layout_width="40dp"
            android:layout_height="40dp" />


        <ImageButton
            android:id="@+id/btnup"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_button"
            android:src="@drawable/ic_arrow_drop_up_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>