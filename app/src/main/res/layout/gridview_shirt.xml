<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/bg_gridview"

    android:orientation="vertical">

    <ImageView

        android:id="@+id/hinh"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"

        android:background="@drawable/bg_button"
        android:src="@drawable/vietnam" />

    <TextView
        android:id="@+id/tenhinh"
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:layout_below="@+id/hinh"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:text="VIET NAM SOCCER CLUB SHIRT"
        android:textColor="#524B4B"
        android:maxLines="2"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView

        android:id="@+id/nhanhieu"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tenhinh"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:text="Adidas"
        android:textColor="#817A7A"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/gia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nhanhieu"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:paddingTop="5dp"
        android:text="$130"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/themvaogio"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/nhanhieu"
        android:layout_alignEnd="@id/hinh"
        android:layout_toRightOf="@+id/gia"
        android:background="@drawable/bg_button"
        android:text="ADD TO CART"

        android:textColor="#03A9F4"
        android:textSize="16sp" />


</RelativeLayout>